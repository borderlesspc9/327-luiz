FROM node:20-alpine

WORKDIR /app

# Instalar dependências globais
RUN npm install -g npm@latest

# Copiar arquivos de dependências primeiro (cache layer)
COPY package*.json ./

# Instalar dependências do projeto
RUN npm install

# Copiar resto dos arquivos
COPY . .

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
